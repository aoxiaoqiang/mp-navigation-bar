._wrap {
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}

// status start
.status-bar {
  width: 100%;
  box-sizing: border-box;
  background-color: transparent;
  opacity: 0;
}
// status end

// navigation start
.navigation-bar {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  text-align: center;
  position: relative;
}

.nav-actions {
  @height: 32px;
  position: absolute;
  top: 50%;
  left: 14rpx;
  z-index: 1;
  transform: translateY(-50%);
  min-width: 54px;
  height: @height;
  border-radius: (@height / 2);
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 17px;
  background-color: rgba(255, 255, 255, 0.5);
  color: #000;

  .border {
    position: absolute;
    left: 0;
    top: 0;
    z-index: -1;
    width: 200%;
    height: 200%;
    box-sizing: border-box;
    border: 1px solid rgba(234, 234, 234, 1);
    border-radius: @height;
    transform-origin: 0 0;
    transform: scale(0.5);
  }

  &.light {
    color: #fff;
    background-color: rgba(0, 0, 0, 0.16);
    .border {
      border: 1px solid rgba(255, 255, 255, 0.24);
    }
    .line {
      background-color: rgba(255, 255, 255, 0.24);
    }
  }

  .nav-back,
  .nav-home {
    width: 43px;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .nav-back {
    font-size: 15px;
    overflow: hidden;
  }

  .line {
    @h: 18px;
    width: 1px;
    height: @h;
    margin-top: ((@height - @h) / 2);
    background-color: rgba(204, 204, 204, 1);
    transform: scaleX(0.5);
    transform-origin: 100% 50%;
  }

  .back-image {
    width: 8px;
    height: 14px;
  }
  .home-image {
    width: 17px;
    height: 17px;
  }
}

.slot {
  position: absolute;
  left: 0;
  height: 100%;
}

.nav-title {
  margin: auto;
  text-align: center;
  font-weight: 700;
  color: #000;
  &.light {
    color: #fff;
  }
}
// navigation end
